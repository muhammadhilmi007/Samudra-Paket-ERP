# Test Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=test

# MongoDB Configuration
# This will be overridden by the test setup

# Redis Configuration
# Redis will be mocked in tests

# JWT Configuration
JWT_SECRET=test-jwt-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=samudra-paket-erp-test
JWT_AUDIENCE=samudra-paket-users-test

# Email Configuration
# Email will be mocked in tests
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASSWORD=password
EMAIL_FROM=Samudra Paket Test <no-reply@test.com>
EMAIL_VERIFICATION_EXPIRES=24h
RESET_PASSWORD_EXPIRES=1h

# Security Configuration
BCRYPT_SALT_ROUNDS=4
PASSWORD_HISTORY=5
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=30
TOKEN_BLACKLIST_EXPIRY=86400

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX=5
PASSWORD_RESET_RATE_LIMIT_WINDOW_MS=3600000
PASSWORD_RESET_RATE_LIMIT_MAX=3

# Logging Configuration
LOG_LEVEL=error
LOG_FILENAME=auth-service-test.log

# CORS Configuration
CORS_ORIGIN=*
